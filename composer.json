{
    "name": "oilstone/omnipay-sagepay",
    "type": "library",
    "description": "Sage Pay driver for the Omnipay PHP payment processing library",
    "keywords": [
        "gateway",
        "merchant",
        "omnipay",
        "pay",
        "payment",
        "purchase",
        "sage pay",
        "sagepay"
    ],
    "homepage": "https://github.com/oilstone/omnipay-sagepay",
    "license": "MIT",
    "authors": [
        {
            "name": "Online Solutions",
            "email": "support@onlinesolutionsltd.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Omnipay\\SagePay\\" : "src/"
        }
    },
    "require": {
        "php": "^5.6|^7",
        "omnipay/common": "~3.0",
        "ext-json": "*",
        "ext-simplexml": "*"
    },
    "require-dev": {
        "omnipay/tests": "~3.0",
        "squizlabs/php_codesniffer": "^3"
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 src/",
        "fix-style": "phpcbf -p --standard=PSR2 src/"
    }
}
